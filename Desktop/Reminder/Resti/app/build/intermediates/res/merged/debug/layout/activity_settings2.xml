<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="10dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etOrigin2"
        android:hint="Origin"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ivSun2"
        android:layout_marginTop="150dp"
        android:layout_alignLeft="@+id/etDepDate2"
        android:layout_alignStart="@+id/etDepDate2"
        android:layout_alignRight="@+id/etDepDate2"
        android:layout_alignEnd="@+id/etDepDate2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDestination2"
        android:layout_below="@+id/etOrigin2"
        android:hint="Destination"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:layout_alignLeft="@+id/etOrigin2"
        android:layout_alignStart="@+id/etOrigin2"
        android:layout_alignRight="@+id/etOrigin2"
        android:layout_alignEnd="@+id/etOrigin2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etDepDate2"
        android:layout_below="@+id/etDestination2"
        android:layout_centerHorizontal="true"
        android:hint="Departure Date"
        android:ellipsize="start"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/etRetDate2"
        android:layout_below="@+id/etDepDate2"
        android:layout_centerHorizontal="true"
        android:hint="Return Date"
        android:ellipsize="start"
        android:gravity="center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etPass2"
        android:layout_below="@+id/etRetDate2"
        android:layout_centerHorizontal="true"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="Passengers" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivSun2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="75dp"
        android:id="@+id/ibSubmit2"
        android:background="@drawable/plane"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etPass2"
        android:layout_centerHorizontal="true" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/sungif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"/>
</RelativeLayout>